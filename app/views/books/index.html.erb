   <% @books.each do |book| %>
      <div class="card mb-4">
        <div class="card-body">
           <h2 class="card-title"><%= book.title %></h2>
           <h2 class="card-title"><%= book.topic_id %></h2> 
           <h2 class="card-title"><%= book.author_id %></h2>
           <h2 class="card-title"><%= book.cover_url %></h2>
          <a href="/books/<%= book.id %>" class="btn btn-primary">READ ALL &rarr;</a>
        </div>
        <div class="card-footer text-muted">
          <%= book.created_at %>
        </div>
      </div>  
