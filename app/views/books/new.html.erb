<div class="col-md-8">
<form action="/books/create" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="book[title]" class="form-control">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">CHOOSE TEMA!!!</label>
    <select class="form-control" name="book[topic_id]">
      <% @topics.each do |topic| %>
        <option value="<%= topic.id %>"><%= topic.title %></option>
      <% end %>  
    </select>
  </div>
  

  <div class="form-group">
    <label for="exampleFormControlSelect1">Select an Author</label>
      <select class="form-control" name="book[author_id]">
        <% @authors.each do |author| %>
         <option value="<%= author.id %>"><%= author.name %></option>
        <% end %>  
      </select>
  </div>
  
  <div class="form-group">
    <label for="cover_url">COVER BOOK</label>
    <input type="text" name="book[cover_url]" class="form-control">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit" class="btn btn-primary">CREATE</button>
</form>
</div>
